{
	"name": "C# (.NET Core 5.0)",
	"dockerFile": "Dockerfile",

	"settings": {
		"terminal.integrated.shell.linux": "/bin/bash"
	},

	"extensions": [
		"ms-dotnettools.csharp",
		"formulahendry.dotnet-test-explorer"
	],

